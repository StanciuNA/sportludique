{% extends 'base.html.twig' %}


{% block body %}
<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="card">
      <div class="card-body">
        <div class="row d-flex justify-content-center pb-5">
          <div class="col-md-7 col-xl-5 mb-4 mb-md-0">
            <div class="py-4 d-flex flex-row">
              <h5><span class="far fa-check-square pe-2"></span><b>Panier</b> </h5>
              <span class="ps-2"></span>
            </div>
            <h4 class="text-success">{{ totalPrice }}€</h4>
            
            {% for product in Products %}
            <div class="d-flex pt-2">
              <div>
                <p>
                  <b>{{product.getProduct.getNom}}<span class="text-success">{{product.getBulkPrice}}€</span></b>
                </p>
              </div>
              <div class="ms-auto">
                <img
                                src={{product.getProduct.getImage}} class="img-fluid rounded-3" alt="Cotton T-shirt">
              </div>
            </div>
            {% endfor %}
            
            
           
            <div class="pt-2">
              <div class="d-flex pb-2">
                <div>
                  <p>
                    
                  </p>
                </div>
                <div class="ms-auto">
                  
                </div>
              </div>
              <p>
                Pour des raisons techniques, il n'y a que la possibilté de payer via paypal.
              </p>
              <form class="pb-3" action="app_payment" method="post">
                <div class="d-flex flex-row pb-3">
                  <div class="d-flex align-items-center pe-2">
                    <input class="form-check-input" type="radio" name="radioNoLabel" id="radioNoLabel1"
                      value="" aria-label="..." checked />
                      
                      <input type="hidden" name="token"  value="{{csrf_token('myform')}}">

               <input type="hidden" name="amount"  value="1120.6">
                  </div>
                  <div class="rounded border d-flex w-100 p-3 align-items-center">
                    <p class="mb-0">
                      <i class="fab fa-cc-visa fa-lg text-primary pe-2"></i>Paypal
                      
                    </p>
                    <div class="ms-auto"></div>
                  </div>
                </div>

                
                </div>
                <input type="button" value="Proceed to payment" class="btn btn-primary btn-block btn-lg" />
              </form>
              
            </div>
          </div>

          <div class="col-md-5 col-xl-4 offset-xl-1">
            <div class="py-4 d-flex justify-content-end">
              <h6><a href="/home">Cancel and return to website</a></h6>
            </div>
            <div class="rounded d-flex flex-column p-2" style="background-color: #f8f9fa;">
              <div class="p-2 me-3">
                <h4>Récapitulatif</h4>
              </div>

              <div class="p-2 d-flex">
                <div class="col-8"></div>
                <div class="ms-auto"></div>
              </div>
              <h6>Informations de livraison</h6>
              <div class="p-2 d-flex">
                <div class="col-8">{{adress.firstname}} {{adress.name}}</div>
                <div class="ms-auto"></div>
              </div>
              <div class="p-2 d-flex">
                <div class="col-8">{{adress.street}} {{adress.pc}} {{adress.city}}</div>
                
              </div>

              <div class="p-2 d-flex">
                <div class="col-8">Amount toward deductible</div>
                <div class="ms-auto">$0.00€</div>
              </div>
              <div class="p-2 d-flex">
                <div class="col-8">Coinsurance( 0% )</div>
                <div class="ms-auto">+ 0.00€</div>
              </div>
              
              <div class="border-top px-2 mx-2"></div>
              <div class="p-2 d-flex pt-3">
                <div class="col-8"><b>Total</b></div>
                <div class="ms-auto"><b class="text-success">{{ totalPrice }}€</b></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}