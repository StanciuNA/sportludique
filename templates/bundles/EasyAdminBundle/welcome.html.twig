{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_content %}
    <h1 class="text-white">Reporting</h1>

    <div class="row">
        <div class="col-md-6">
            <div class="card bg-light text-dark">
                <div class="card-header">
                    <h2 class="card-title mb-0">Ventes</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">Total des ventes</div>
                        <div class="text-success">$1,200</div>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">Ventes cette semaine</div>
                        <div class="text-success">27</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="text-muted">Ventes aujourd'hui</div>
                        <div class="text-success">5</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light text-dark">
                <div class="card-header">
                    <h2 class="card-title mb-0">Clients</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">Total des clients</div>
                        <div class="text-primary">300</div>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">Nouveaux clients cette semaine</div>
                        <div class="text-primary">15</div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div class="text-muted">Nouveaux clients aujourd'hui</div>
                        <div class="text-primary">2</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% if app.request.cookies.has('symfony_dashboard_dark_mode_enabled') %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        <style>
            body {
                background-color: #222;
            }
            .card.bg-light {
                background-color: #333;
            }
            .text-dark {
                color: #eee;
            }
            .text-white {
                color: #fff;
            }
        </style>
    {% endif %}
{% endblock %}
