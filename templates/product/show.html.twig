{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <form action="/action_page.php" method="post" id="productForm">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.nom }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <th> 
                    <img src =  {{ product.image }}  style = 'width: 100%;
                                                              max-width: 200px;
                                                              max-height: 200px
                                                              height: auto;'/> 
                </th>
                                
            </tr>
        </tbody>
    </table>
    <input type="text" id="lname" name="lname">
    </form>

    <a href="{{ path('app_product_index') }}">back to list</a>
    <a href="{{ path('app_product_show', {'id': product.id}) }}">edit</a>


{% endblock %}
